{
    "manifest_version": 3,
    "name": "Karam Side Panel",
    "version": "1.0.0",
    "description": "A karma tracking side panel extension",
    "permissions": [
        "sidePanel",
        "activeTab",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "action": {
        "default_title": "Open Karam Side Panel"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self'"
    },
    "icons": {
        "16": "favicon.ico",
        "48": "favicon.ico",
        "128": "favicon.ico"
    }
}